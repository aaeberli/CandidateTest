@model PairingTest.Web.Models.QuestionnaireViewModel
@{
    ViewBag.Title = "Questionnaire";
}

<h2>@Model.QuestionnaireTitle</h2>

@using (Html.BeginForm("Submit", "Questionnaire", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.ValidationSummary("", new { @class = "text-danger" })
    @Html.HiddenFor(m => m.Id)
    for (int i = 0; i < Model.Questions.Count; i++)
    {
        <div class="form-group">
            @Html.HiddenFor(m => m.Questions[i].Id)
            @Html.LabelFor(m => m.Questions[i].Title, Model.Questions[i].Title, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextAreaFor(m => m.Questions[i].Answer, new { @class = "form-control", rows = 5 })
            </div>
        </div>
    }

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Submit" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
